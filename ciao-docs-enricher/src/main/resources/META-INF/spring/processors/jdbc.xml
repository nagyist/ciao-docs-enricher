<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="jdbcDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<!-- Define any processor beans here -->
	<bean id="enricher" class="uk.nhs.ciao.docs.enricher.DynamicDocumentEnricher">
		<constructor-arg>
			<bean class="uk.nhs.ciao.docs.enricher.JdbcResourceDocumentPropertiesFinder">
				<property name="dataSourceId" value="jdbcDataSource" />
				<property name="sqlQuery" value="${jdbc.sqlQuery}" />
				<property name="idParameter" value="${jdbc.idParameter}" />
				<property name="idSelector" value="${jdbc.idSelector}" />
				<property name="jsonColumn" value="${jdbc.jsonColumn}" />				
			</bean>
		</constructor-arg>
		
		<property name="enrichablePropertiesSelectors" value="#{T(java.util.Arrays).asList('${jdbc.enrichablePropertiesSelectors}'.split(','))}" />
		<property name="lookupKeySelectors" value="#{T(java.util.Arrays).asList('${jdbc.lookupKeySelectors}'.split(','))}" />
	</bean>

</beans>